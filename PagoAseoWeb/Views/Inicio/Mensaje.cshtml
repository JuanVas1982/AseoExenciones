@{
    ViewBag.Title = "Mensaje";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3>@Html.Raw(ViewData["encabezado"].ToString())</h3>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <p><span class="text-info">Mensaje:</span>&nbsp;&nbsp;@Html.Raw(ViewData["mensaje"].ToString())</p>
                </div>
                <div class="col-md-12">
                    <p><span class="text-info">Recomendación:</span>&nbsp;&nbsp;@Html.Raw(ViewData["recomendacion"].ToString())</p>
                </div>
                <div class="col-md-12">
                    <p><span class="text-info">Motivo:</span>&nbsp;&nbsp;@Html.Raw(ViewData["falla"].ToString())</p>
                </div>
                <div class="col-md-12">
                    <p><span class="text-info">Data:</span>&nbsp;&nbsp;@Html.Raw(ViewData["data"].ToString())</p>
                </div>
                <div class="col-md-12">
                    <p><span class="text-info">Fecha:</span>&nbsp;&nbsp;@Html.Raw(DateTime.Now.ToString())</p>
                </div>
                <div class="col-md-12">
                    <ul class="pager">
                        <li><a href="@Url.Action("Index","Inicio")">Inicio</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
  
